@model IEnumerable<Core.User>
@* @model Microsoft.EntityFrameworkCore.DbSet<Core.User> *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Список пользователей</h2>
<p><a asp-action="Index" asp-controller="Home">На главную</a></p>
<p><a asp-action="Create">Добавить пользователя</a></p>
<table class="table">
    <tr><th>Id</th><th>Логин</th><th>Пароль</th><th>Админ?</th><th>Редактировать</th><th>Удалить</th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Login</td>
            <td>@item.Password</td>
            <td>@item.isAdmin</td>
            <td><a asp-action="Edit" asp-controller="UserView" asp-route-id="@item.Id">Изменить</a></td>
            <td><a asp-action="Delete" asp-controller="UserView" method="post" asp-route-id="@item.Id">Удалить</a></td>
        </tr>
    }
</table>